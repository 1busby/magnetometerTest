<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.michael.magnetsensortest.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/magnet_label_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="X"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/magnet_output_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/magnet_label_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Y"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/magnet_output_y"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/magnet_label_z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Z"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/magnet_output_z"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50sp" />

</android.support.v7.widget.LinearLayoutCompat>
